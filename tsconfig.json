{
  "compilerOptions": {
    "module": "Node16",
    "moduleResolution": "node16",
    "moduleDetection": "force",
    "target": "ES2020",
    "esModuleInterop": true,
    "noImplicitAny": true,
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "*": ["node_modules/*"]
    }
  },
  "include": ["src/**/*", "./src/index.ts"],
  "ts-node": {
    "transpileOnly": true,
    "files": true,
    "experimentalResolver": true
  }
}
